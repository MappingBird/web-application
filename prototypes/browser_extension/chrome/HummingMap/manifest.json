{
  "manifest_version": 2,

  "name": "PinGisom",
  "description": "The PingGismo for chrome extension.",
  "version": "0.6",

  "background": {
    "scripts": ["bgscript.js"],
	"persistent": false
  },
  
  "browser_action": {
    "default_title": "PinGismo",  
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },  
  
  "content_scripts": [
    {
	  "matches": ["<all_urls>"],
      "js": ["contentscript.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "permissions": [
	"activeTab",
	"contentSettings",
    "background",
	"http://pingismo.appspot.com/*"
	
  ]
}
